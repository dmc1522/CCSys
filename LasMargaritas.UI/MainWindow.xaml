<Window x:Class="LasMargaritas.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LasMargaritas.UI"
        xmlns:controls="clr-namespace:LasMargaritas.UI.UserControls"
        mc:Ignorable="d"
        Style="{StaticResource MainWindow}"
        Title="Las Margaritas" Width="1920" Height="1080" >
    <Grid  Width="1920" Height="1080">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1060" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button Height="20" Width="150" x:Name="buttonViewWeightTickets" Click="buttonViewWeightTickets_Click">Ver boletas</Button>
                <Button Height="20" Width="150" x:Name="buttonViewProducers" Click="buttonViewProducers_Click">Ver Productores</Button>
            </StackPanel>
        </StackPanel>
        <Grid Grid.Row="1">
            <controls:ProducerList x:Name="producerList" Visibility="Hidden"></controls:ProducerList>

            <controls:Tickets x:Name="tickets" Visibility="Visible" ></controls:Tickets>
        </Grid>
    </Grid>
</Window>
