            <Button Grid.Column="2"  x:Name="btnClose" Content="X" Style="{StaticResource CircleButton}" Click="btnClose_Click"/>
        </Grid>

        <Grid Grid.Row="1">
            <controls:Login Visibility="Hidden"  />
            <controls:MainMenue  />

        </Grid>

        <Grid Style="{StaticResource Footer}" Height="100" Width="1920" Grid.Row="2"></Grid>-->
    </Grid>
</UserControl>
